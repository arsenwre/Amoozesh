<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools"
    android:id="@+id/card_list_items_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/split_marginBottom_star"
    android:background="@drawable/background_list"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_items_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:background="@null"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/token_img_compa"
                        android:layout_width="@dimen/img_logo"
                        android:layout_height="@dimen/img_logo"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:src="@drawable/mci_logo" />

                </LinearLayout>

                <com.pec.reza.amoozesh.ui.DPTextView
                    android:id="@+id/message_items_sender_txt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginRight="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="3.9"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:padding="@dimen/charge_sim_padding_txt"
                    android:singleLine="true"
                    android:text="شهروند - سعادت آباد"
                    android:textColor="@color/txt_dark_gray"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <com.pec.reza.amoozesh.ui.DPTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1.8"
                android:paddingRight="10dp"
                android:gravity="right|center"
                android:text="فرستنده:"
                android:textColor="@color/txt_light_gray"
                android:textSize="@dimen/normal_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:background="@color/transparent"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/token_img_company"
                        android:layout_width="@dimen/img_logo"
                        android:layout_height="@dimen/img_logo"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:src="@drawable/mci_logo" />

                </LinearLayout>

                <com.pec.reza.amoozesh.ui.DPTextView
                    android:id="@+id/message_items_date_txt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginRight="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="3.9"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:padding="@dimen/charge_sim_padding_txt"
                    android:singleLine="true"
                    android:text="شهروند - سعادت آباد"
                    android:textColor="@color/txt_dark_gray"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <com.pec.reza.amoozesh.ui.DPTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1.8"
                android:paddingRight="10dp"
                android:gravity="right|center"
                android:text="تاریخ ارسال:"
                android:textColor="@color/txt_light_gray"
                android:textSize="@dimen/normal_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:background="@color/transparent"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/token_img_compan"
                        android:layout_width="@dimen/img_logo"
                        android:layout_height="@dimen/img_logo"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:src="@drawable/mci_logo" />

                </LinearLayout>

                <com.pec.reza.amoozesh.ui.DPTextView
                    android:id="@+id/message_item_title_txt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="@dimen/charge_sim_padding_txt"
                    android:layout_marginRight="@dimen/charge_sim_padding_txt"
                    android:layout_marginTop="@dimen/charge_sim_padding_txt"
                    android:layout_weight="3.9"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:padding="@dimen/charge_sim_padding_txt"
                    android:singleLine="true"
                    android:text="شهروند - سعادت آباد"
                    android:textColor="@color/txt_dark_gray"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <com.pec.reza.amoozesh.ui.DPTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1.8"
                android:gravity="right|center"
                android:text="عنوان:"
                android:paddingRight="10dp"
                android:textColor="@color/txt_light_gray"
                android:textSize="@dimen/normal_size" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>