<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_page_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/split_marginBottom_star"
    tools:context=".FirstPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/split_marginBottom_star">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/split_marginBottom_star"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.pec.reza.amoozesh.ui.rippleView.RippleView
                    android:id="@+id/btnFees"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@+id/toolbar1"
                    android:layout_marginLeft="@dimen/margin_main"
                    android:layout_marginRight="@dimen/margin_main"
                    android:layout_marginTop="@dimen/margin_main"
                    android:layout_weight=".30"
                    android:background="#203d77"
                    android:drawablePadding="-25sp"
                    android:drawableTop="@drawable/usermanual"
                    android:onClick="btnFeesClick"
                    android:paddingTop="30sp"
                    android:text="پرداخت شهریه"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp">

                </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                <com.pec.reza.amoozesh.ui.rippleView.RippleView
                    android:id="@+id/ButtonTest1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/toolbar1"
                    android:layout_marginRight="@dimen/margin_main"
                    android:layout_marginTop="@dimen/margin_main"
                    android:layout_weight=".70"
                    android:background="#ef7836"
                    android:drawablePadding="-25sp"
                    android:drawableTop="@drawable/hearthealth"
                    android:onClick="btnLatestCoursesClick"
                    android:paddingTop="30sp"
                    android:text="آخرین دوره های آموزشگاه"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp">

                </com.pec.reza.amoozesh.ui.rippleView.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6">

                        <com.pec.reza.amoozesh.ui.rippleView.RippleView
                            android:id="@+id/btnFees"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_main"
                            android:layout_marginRight="@dimen/margin_main"
                            android:layout_marginTop="@dimen/margin_main"
                            android:background="#59bfc4"
                            android:drawablePadding="-25sp"
                            android:drawableTop="@drawable/usermanual"
                            android:onClick="btnFeesClick"
                            android:paddingTop="30sp"
                            android:text="پرداخت شهریه"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp">

                        </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4">

                        <com.pec.reza.amoozesh.ui.rippleView.RippleView
                            android:id="@+id/btnFees"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_main"
                            android:layout_marginRight="@dimen/margin_main"
                            android:layout_marginTop="@dimen/margin_main"
                            android:background="#203d77"
                            android:drawablePadding="-25sp"
                            android:drawableTop="@drawable/usermanual"
                            android:onClick="btnFeesClick"
                            android:paddingTop="30sp"
                            android:text="پرداخت شهریه"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp">

                        </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:orientation="vertical">

                    <com.pec.reza.amoozesh.ui.rippleView.RippleView
                        android:id="@+id/ButtonTest3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/btnMessages"
                        android:layout_marginRight="@dimen/margin_main"
                        android:layout_marginTop="@dimen/margin_main"
                        android:background="#203d77"
                        android:drawablePadding="-25sp"
                        android:drawableTop="@drawable/message"
                        android:onClick="btnMessagesClick"
                        android:paddingTop="30sp"
                        android:text="پیام ها"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp">

                    </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                    <com.pec.reza.amoozesh.ui.rippleView.RippleView
                        android:id="@+id/ButtonTest4"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ButtonTest3"
                        android:layout_marginRight="@dimen/margin_main"
                        android:layout_marginTop="@dimen/margin_main"
                        android:background="#ef7836"
                        android:drawablePadding="-20sp"
                        android:drawableTop="@drawable/alarmclock"
                        android:paddingTop="10sp"
                        android:text="نظرسنجی"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp">

                    </com.pec.reza.amoozesh.ui.rippleView.RippleView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="87.5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.pec.reza.amoozesh.ui.rippleView.RippleView
                        android:id="@+id/btnFees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_main"
                        android:layout_marginLeft="@dimen/margin_main"
                        android:layout_marginRight="@dimen/margin_main"
                        android:layout_marginTop="@dimen/margin_main"
                        android:layout_weight="1.4"
                        android:background="#ef7836"
                        android:drawablePadding="-25sp"
                        android:drawableTop="@drawable/usermanual"
                        android:onClick="btnFeesClick"
                        android:paddingTop="30sp"
                        android:text="پرداخت شهریه"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp">

                    </com.pec.reza.amoozesh.ui.rippleView.RippleView>


                    <com.pec.reza.amoozesh.ui.rippleView.RippleView
                        android:id="@+id/btnFees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_main"
                        android:layout_marginTop="@dimen/margin_main"
                        android:layout_marginBottom="@dimen/margin_main"
                        android:layout_weight=".6"
                        android:background="#59bfc4"
                        android:drawablePadding="-25sp"
                        android:drawableTop="@drawable/usermanual"
                        android:onClick="btnFeesClick"
                        android:paddingTop="30sp"
                        android:text="پرداخت شهریه"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp">
                    </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="87.5dp"
                    android:orientation="horizontal">

                    <com.pec.reza.amoozesh.ui.rippleView.RippleView
                        android:id="@+id/btnFees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_main"
                        android:layout_marginRight="@dimen/margin_main"
                        android:layout_marginLeft="@dimen/margin_main"
                        android:layout_weight="1"
                        android:background="#203d77"
                        android:drawablePadding="-25sp"
                        android:drawableTop="@drawable/usermanual"
                        android:onClick="btnFeesClick"
                        android:paddingTop="30sp"
                        android:text="پرداخت شهریه"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp">

                    </com.pec.reza.amoozesh.ui.rippleView.RippleView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
